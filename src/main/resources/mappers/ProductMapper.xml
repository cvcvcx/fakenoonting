<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fakenoonting.product">
    <resultMap id="productResultMap" type="com.fakenoonting.www.product.vo.ProductVO">
        <result column="id" property="id" />
        <result column="prod_name" property="productName" />
        <result column="price" property="price" />
        <result column="content" property="content" />
        <result column="create_date" property="uploadDate" />
        <result column="useyn" property="productStatus" />
        <result column="modify_date" property="modifyDate" />
    </resultMap>

    <resultMap id="productImgItem" type="com.fakenoonting.www.util.upload.vo.ImgItemVO">
        <result column="img_UUID" property="imgUUID" />
        <result column="product_id" property="foreignId" />
        <result column="org_img_name" property="orgImgName" />
        <result column="upload_path" property="uploadPath" />
        <result column="create_date" property="createDate" />
    </resultMap>

    <insert id="saveProduct" parameterType="com.fakenoonting.www.product.vo.ProductVO" >
        <![CDATA[
            insert into product
            (prod_name,price,content)
             Values (#{productName},#{price},#{content})
        ]]>
        <selectKey resultType="long" keyProperty="id" order="AFTER" >
            SELECT LAST_INSERT_ID()
        </selectKey>
    </insert>


    <select id="findById" parameterType="com.fakenoonting.www.product.vo.ProductVO" resultMap="productResultMap">
        <![CDATA[
            select *
            from product
            where id = #{id}
        ]]>
    </select>



    <select id="findAll" resultMap="productResultMap">
        <![CDATA[
            select *
            from product
        ]]>
    </select>

    <select id="findImagesByProductId" resultMap="productImgItem" parameterType="com.fakenoonting.www.product.vo.ProductVO">
        <![CDATA[
            select *
            from product_img_item
            where product_id = #{id}
        ]]>
    </select>

    <delete id="deleteProduct" parameterType="com.fakenoonting.www.product.vo.ProductVO">
        <![CDATA[
           delete
           from product
           where id = #{id}
        ]]>
    </delete>

    <delete id="deleteProductImg" parameterType="com.fakenoonting.www.product.vo.ProductVO">
        <![CDATA[
           delete
           from product_img_item
           where product_id = #{id}
        ]]>
    </delete>

    <insert id="uploadImg" parameterType="com.fakenoonting.www.util.upload.vo.ImgItemVO">
        insert into product_img_item
        (product_id, org_img_name,upload_path,img_UUID)
        values (#{foreignId},#{orgImgName},#{uploadPath},#{imgUUID})
    </insert>
</mapper>